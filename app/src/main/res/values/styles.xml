<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tile_concent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_bold</item>
    </style>

    <style name="tile_screen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="sub_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="title_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/silver_black</item>
    </style>

    <style name="detail_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/silver_black</item>
    </style>

    <style name="detail_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="detail_cost">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

</resources>
